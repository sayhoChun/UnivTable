        style="@style/Widget.AppCompat.Button.Borderless"
        android:id="@+id/menu02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu02"
        android:gravity="left|center"
        android:padding="10dp"
        />
